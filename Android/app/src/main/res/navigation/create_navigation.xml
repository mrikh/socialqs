<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/create_navigation"
    xmlns:tools="http://schemas.android.com/tools"
    app:startDestination="@id/questionTitleFragment">

    <fragment
        android:id="@+id/questionTitleFragment"
        android:name="com.example.socialqs.activities.create.fragments.QuestionTitleFragment"
        android:label="fragment_question_title"
        tools:layout="@layout/fragment_question_title">
        <action
            android:id="@+id/action_questionTitleFragment_to_selectVideoSourceFragment"
            app:destination="@id/selectVideoSourceFragment" />
    </fragment>

    <fragment
        android:id="@+id/selectVideoSourceFragment"
        android:name="com.example.socialqs.activities.create.fragments.SelectVideoSourceFragment"
        android:label="fragment_select_source"
        tools:layout="@layout/fragment_select_video_source" >
        <action
            android:id="@+id/action_selectVideoSourceFragment_to_createVideoFragment"
            app:destination="@id/createVideoFragment" />
    </fragment>

    <fragment
        android:id="@+id/createVideoFragment"
        android:name="com.example.socialqs.activities.create.fragments.CreateVideoFragment"
        android:label="fragment_final"
        tools:layout="@layout/fragment_create_video" />
</navigation>