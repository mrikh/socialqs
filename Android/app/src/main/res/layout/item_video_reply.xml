<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:cardView="http://schemas.android.com/apk/res-auto"
    android:id="@+id/carpark_cardView"
    android:layout_width="match_parent"
    android:layout_height="430dp"
    cardView:cardElevation="8dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.cardview.widget.CardView
            android:id="@+id/reply_user_imgCardView"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="14dp"
            android:layout_marginLeft="14dp"
            android:layout_marginTop="6dp"
            cardView:cardCornerRadius="50dp"
            cardView:layout_constraintStart_toStartOf="parent"
            cardView:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/reply_user_img"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                tools:background="@tools:sample/avatars" />
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/reply_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="13dp"
            android:text="Name"
            android:textColor="@color/black"
            android:textSize="20sp"
            cardView:layout_constraintEnd_toEndOf="parent"
            cardView:layout_constraintHorizontal_bias="0.026"
            cardView:layout_constraintStart_toEndOf="@+id/reply_user_imgCardView"
            cardView:layout_constraintTop_toTopOf="parent" />

        <VideoView
            android:id="@+id/reply_video_view"
            android:layout_width="0dp"
            android:layout_height="300dp"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            cardView:layout_constraintBottom_toBottomOf="parent"
            cardView:layout_constraintEnd_toEndOf="parent"
            cardView:layout_constraintHorizontal_bias="0.0"
            cardView:layout_constraintStart_toStartOf="parent"
            cardView:layout_constraintTop_toBottomOf="@+id/reply_user_name"
            cardView:layout_constraintVertical_bias="0.144" />

        <TextView
            android:id="@+id/correct_answer"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:layout_marginTop="3dp"
            cardView:layout_constraintBottom_toBottomOf="parent"
            cardView:layout_constraintStart_toStartOf="parent"
            cardView:layout_constraintTop_toBottomOf="@+id/reply_video_view"
            cardView:layout_constraintVertical_bias="0.137" />

        <androidx.cardview.widget.CardView
            android:id="@+id/likes_cardview"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="7dp"
            cardView:cardBackgroundColor="@color/like_btn"
            cardView:cardCornerRadius="50dp"
            cardView:layout_constraintBottom_toBottomOf="parent"
            cardView:layout_constraintStart_toEndOf="@+id/correct_answer"
            cardView:layout_constraintTop_toBottomOf="@+id/reply_video_view"
            cardView:layout_constraintVertical_bias="0.0">

            <ImageView
                android:id="@+id/likes_img_view"
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:layout_gravity="center"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_thumb_up_24" />
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/reply_like_textview"
            android:layout_width="75dp"
            android:layout_height="40dp"
            android:layout_marginStart="4dp"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="4dp"
            android:gravity=""
            android:text="@string/likes"
            android:textColor="@color/black"
            android:textSize="18sp"
            cardView:layout_constraintBottom_toBottomOf="parent"
            cardView:layout_constraintStart_toEndOf="@+id/likes_cardview"
            cardView:layout_constraintTop_toBottomOf="@+id/reply_video_view"
            cardView:layout_constraintVertical_bias="0.0" />

        <androidx.cardview.widget.CardView
            android:id="@+id/dislikes_cardview"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginStart="4dp"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="7dp"
            android:layout_marginEnd="6dp"
            android:layout_marginRight="6dp"
            cardView:cardBackgroundColor="@color/dislike_btn"
            cardView:cardCornerRadius="50dp"
            cardView:layout_constraintBottom_toBottomOf="parent"
            cardView:layout_constraintEnd_toStartOf="@+id/reply_dislike_textview"
            cardView:layout_constraintStart_toEndOf="@+id/reply_like_textview"
            cardView:layout_constraintTop_toBottomOf="@+id/reply_video_view"
            cardView:layout_constraintVertical_bias="0.0">

            <ImageView
                android:id="@+id/dislikes_img_view"
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:layout_gravity="center"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_thumb_down_24" />
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/reply_dislike_textview"
            android:layout_width="85dp"
            android:layout_height="40dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="4dp"
            android:layout_marginRight="4dp"
            android:gravity=""
            android:text="@string/dislikes"
            android:textColor="@color/black"
            android:textSize="18sp"
            cardView:layout_constraintBottom_toBottomOf="parent"
            cardView:layout_constraintEnd_toEndOf="parent"
            cardView:layout_constraintTop_toBottomOf="@+id/reply_video_view"
            cardView:layout_constraintVertical_bias="0.0" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:text="Post Time"
            cardView:layout_constraintBottom_toBottomOf="parent"
            cardView:layout_constraintEnd_toEndOf="parent"
            cardView:layout_constraintHorizontal_bias="0.989"
            cardView:layout_constraintStart_toStartOf="parent"
            cardView:layout_constraintTop_toBottomOf="@+id/reply_dislike_textview"
            cardView:layout_constraintVertical_bias="0.375" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>